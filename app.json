{
  "expo": {
    "name": "UMConvoApp",
    "slug": "UMConvoApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": false,
    "scheme": "umconvoapp",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    

    "web": {
      "favicon": "./assets/favicon.png",
      "redirectPatterns": [
        "https://auth.expo.io/*", 
        "umconvoapp://*"
      ]
    },

    "plugins": [
      "expo-web-browser",
      "@react-native-google-signin/google-signin"
    ],
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "host.exp.exponent", 
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLSchemes": [
              "umconvoapp",
              "com.googleusercontent.apps.378967716917-8cvh67gtcel268vl0k5cup07ld2nikbm"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.UMConvoApp",
      "googleServicesFile": "./google-services.json"
    },
    
    "extra": {
      "eas": {
        "projectId": "84debcc5-87cc-43de-9adc-85593eb31ea5"
      }
    }
  }
}
